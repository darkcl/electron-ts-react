{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
